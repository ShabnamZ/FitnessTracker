<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Fitness Tracker</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container-fluid">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <a href="/Home"><img src="~/Content/Assets/heartbeat.png" class="nav-image navbar-left" /></a>
                @Html.ActionLink("Fitness Tracker", "Index", "Home", new { area = "" }, new { @class = "navbar-brand appname" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                        <li>@Html.ActionLink("Contact", "Contact", "Home")</li>
                    @if (User.Identity.IsAuthenticated)
                    {
                        <li>@Html.ActionLink("Exercises", "Index", "Exercise")</li>
                        <li class="dropdown">
                            <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">Workouts<span class="caret"></span></a>
                            <ul class="dropdown-menu">
                                <li>@Html.ActionLink("Workouts", "Index", "Workout")</li>
                                <li>@Html.ActionLink("Workout By Date", "WorkoutByDate", "Workout")</li>
                            </ul>
                        </li>
                        <li>@Html.ActionLink("Trainers", "Index", "Trainer")</li>

                    }
                </ul>

                @Html.Partial("_LoginPartial")
            </div>
        </div>
    </div>
    <div class="newContainer">
        @RenderBody()
        @*<footer>
                <p>&copy; @DateTime.Now.Year - Fitness Tracker</p>
            </footer>*@
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)

    <footer>
        <hr class="col-lg-12" style="padding-right:0; padding-left:0" />
        <br />
        <br />
        <p>
            Fitness Tracker &nbsp;-&nbsp; Let us do all the "hard work" for you. &nbsp;|&nbsp; &copy; @DateTime.Now.Year &nbsp;- Shabnam Ziyovuddinova</>
        </p>
        <p><a href="https://shabnamz.github.io/" target="_blank"><img id="footer-heartbeat" src="~/Content/Assets/heartbeat.png" /></a>
    </footer>

</body>
</html>
