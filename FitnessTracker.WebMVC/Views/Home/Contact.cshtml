@{
    ViewBag.Title = "Contact";
}
<div class="form-wrapper">
    <h2 style="text-align:center">@ViewBag.Title</h2>
    <p style="text-align:center"><b>Got a question? We would love to hear from you. Send us a message and we'll respond as soon as possible.</b></p>
    <!-- Email Form-->
    <section>
        <form id="contactForm" action="https://formspree.io/shabnam.ziyovuddinova@gmail.com" method="POST">

            <div class="form-group">
                <label>
                    <span class="contact">Name*</span>
                    <input class="form-control" type="text" name="Name">
                </label>
            </div>

            <div class="form-group">
                <label>
                    <span class="control-label">Email address*</span>
                    <input class="form-control" type="email" name="Reply to">
                </label>
            </div>

            <label>
                <span class="control-label"> Message</span>
                <textarea name="Message" class="form-control"></textarea>
            </label>

            <span><input class="btn btn-default" type="submit" value="Send Message"></span>
        </form>

    </section>
</div>

