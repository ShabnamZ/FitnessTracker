@{
    ViewBag.Title = "Index";
}

<h2>Exercise</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
@if (TempData.ContainsKey("SaveResult"))
 {
    <div class="alert alert-success fade in" role="alert">

    <button type="button" class="close" data-dismiss="alert">
        <span>&times;</span>
    </button>
    @TempData["SaveResult"]
    </div>
 }
    <table class="table">
        <tr>
            @*
            <th>
                @Html.DisplayNameFor(model => model.ExerciseId)
            </th>*@
            <th>
                @Html.DisplayNameFor(model => model.NameOfExercise)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TypeOfExercise)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DifficultyLevel)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Duration)
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
    <tr>
        @*
        <td>
            @Html.DisplayFor(modelItem => item.ExerciseId)
        </td>*@
        <td>
            @Html.DisplayFor(modelItem => item.NameOfExercise)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.TypeOfExercise)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.DifficultyLevel)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Duration)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id = item.ExerciseId }) |
            @Html.ActionLink("Details", "Details", new { id = item.ExerciseId }) |
            @Html.ActionLink("Delete", "Delete", new { id = item.ExerciseId })
